datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
  id            String @id
  type          String
  question      String
  options       Json
  correctAnswer String
  difficulty    String
  explanation   String
}

model Player {
  id               String   @id @default(cuid())
  name             String
  lobbyId          String?
  lobby            Lobby?   @relation(fields: [lobbyId], references: [id])
  hostOf           Lobby[]  @relation("LobbyHost")
  isHost           Boolean  @default(false)
  score            Int      @default(0)
  joinedAt         DateTime @default(now())
  browserSessionId String
}

model Lobby {
  id         String      @id @default(cuid())
  code       String      @unique
  createdAt  DateTime    @default(now())
  hostId     String
  host       Player      @relation("LobbyHost", fields: [hostId], references: [id])
  maxPlayers Int
  status     LobbyStatus @default(waiting)
  players    Player[]
}

enum LobbyStatus {
  waiting
  started
  finished
}

model GameMode {
  id          String @id
  label       String
  description String
  color       String
  icon        String
}
