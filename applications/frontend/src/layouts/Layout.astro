---
export interface Props {
	title: string;
	description?: string;
}

const { title, description = "Demokratie Quiz - Stärke dein Verständnis für demokratische Werte" } = Astro.props;

// Import global styles
import '../styles/global.css';
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="min-h-screen flex flex-col">
			<!-- Navigation Header -->
			<header class="bg-white shadow-sm border-b-2 border-german-gold sticky top-0 z-50">
				<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="flex justify-between items-center h-16">
						<div class="flex items-center space-x-4">
							<a href="/" class="flex items-center space-x-2 text-xl font-bold text-german-black hover:text-german-red transition-colors">
								<div class="w-8 h-6 german-stripes rounded"></div>
								<span>Demokratie Quiz</span>
							</a>
						</div>
						<div class="hidden md:flex items-center space-x-6">
							<a href="/" class="text-gray-700 hover:text-german-red font-medium transition-colors">Startseite</a>
							<a href="/quiz" class="text-gray-700 hover:text-german-red font-medium transition-colors">Quiz</a>
							<a href="/leaderboard" class="text-gray-700 hover:text-german-red font-medium transition-colors">Bestenliste</a>
							<a href="/reflection" class="text-gray-700 hover:text-german-red font-medium transition-colors">Reflexion</a>
						</div>
						<!-- Mobile menu button -->
						<div class="md:hidden">
							<button class="text-gray-700 hover:text-german-red">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
								</svg>
							</button>
						</div>
					</div>
				</nav>
			</header>

			<!-- Main Content -->
			<main class="flex-1">
				<slot />
			</main>

			<!-- Footer -->
			<footer class="bg-german-black text-white py-8">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
						<div>
							<div class="flex items-center space-x-2 mb-4">
								<div class="w-8 h-6 german-stripes rounded"></div>
								<span class="text-xl font-bold">Demokratie Quiz</span>
							</div>
							<p class="text-gray-300">
								Stärke dein Verständnis für demokratische Werte durch interaktive Quizfragen.
							</p>
						</div>
						<div>
							<h3 class="text-lg font-semibold mb-4 text-german-gold">Navigation</h3>
							<ul class="space-y-2">
								<li><a href="/" class="text-gray-300 hover:text-german-gold transition-colors">Startseite</a></li>
								<li><a href="/quiz" class="text-gray-300 hover:text-german-gold transition-colors">Quiz</a></li>
								<li><a href="/leaderboard" class="text-gray-300 hover:text-german-gold transition-colors">Bestenliste</a></li>
								<li><a href="/reflection" class="text-gray-300 hover:text-german-gold transition-colors">Reflexion</a></li>
							</ul>
						</div>
						<div>
							<h3 class="text-lg font-semibold mb-4 text-german-gold">Über das Projekt</h3>
							<p class="text-gray-300 text-sm">
								Dieses Quiz wurde entwickelt, um das Verständnis für demokratische Prozesse und Werte zu fördern.
							</p>
						</div>
					</div>
					<div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400 text-sm">
						<p>&copy; 2025 Demokratie Quiz. Bildung für die Demokratie.</p>
					</div>
				</div>
			</footer>
		</div>
	</body>
</html>
